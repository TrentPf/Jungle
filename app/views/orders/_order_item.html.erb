<tr>
  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h2>
      <%= product.name %>
    </h2>
    <br>
    <p> 
      <%= product.description %>
    </p>
  </td>
  <td>
    <%= humanized_money_with_symbol product.price %>
  </td>
  <td>
    <%= quantity %>
  </td>
  <td>
    <%= humanized_money_with_symbol quantity * product.price %>
  </td>
</tr>